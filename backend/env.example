# Environment Configuration for Rider Management System
# Copy this file to .env and fill in your actual values

# ========================================
# APPLICATION CONFIGURATION
# ========================================
NODE_ENV=development
PORT=5001
LOG_LEVEL=debug

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.xxxxx.mongodb.net/database-name?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/rider-management?retryWrites=true&w=majority

# MongoDB connection options
MONGODB_OPTIONS_MAX_POOL_SIZE=10
MONGODB_OPTIONS_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_OPTIONS_SOCKET_TIMEOUT_MS=45000

# ========================================
# SECURITY & CORS
# ========================================
# CORS origin for development (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# JWT Secret (if implementing authentication later)
JWT_SECRET=your_super_secret_jwt_key_here

# ========================================
# LOGGING & MONITORING
# ========================================
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true

# ========================================
# PERFORMANCE
# ========================================
REQUEST_BODY_LIMIT=50mb
REQUEST_TIMEOUT_MS=30000

# ========================================
# FEATURES
# ========================================
ENABLE_SEEDING=true
ENABLE_HEALTH_CHECK=true
